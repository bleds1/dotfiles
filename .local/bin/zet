#! /usr/bin/env bash
# stole this script from https://dpitt.me/blog/2020/03/zettelkasten/ it works well but I need the template of the note to fit my system, title, date, filetags. Example usage - type zet a-new-idea in the terminal

set -e

ZROOT=${ZET_ROOT:=~/Dropbox/roam/pages}

name="$ZROOT/$(date +"%Y_%m_%d_%H%M")"
content="#"

for word in $@; do
  name+="_$word"
  content+=" ${word^}"
done

if [ ! -e "$name.md" ]; then
    echo -e "$content\n\n- id: $(date +"%Y-%m-%d-%H%M")\n" > $name.md
fi

nvim -n $name.md

