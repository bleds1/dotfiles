#!/bin/bash

myTerm=kitty
myEdit=vim

menu(){
    printf "1. BBC Scores & Fixtures (sc)\n"
    printf "2. Hacker News (hn)\n"
    printf "3. Crimson Daggers (cd)\n"
	printf "4. Github (gh)\n"
	printf "5. Lemmy.world (lm) \n"
    printf "6. Libgen (li)\n"
    printf "7. Libreddit.de (lr)\n"
	printf "8. Magnetdl (md)\n"
	printf "9. Mastodon.art (ms) \n"
    printf "10. Omnivore (om) \n"
    printf "11. Pinterest (pi)\n"
	printf "12. Proton Calendar (pc)\n"
	printf "13. Protonmail (pm)\n"
    printf "14. Raindrop.io (rd)\n"
    printf "15. Wikipedia (wi)\n"
}

main(){
    choice=$(menu | rofi -dmenu | cut -d. -f1)

	case $choice in
		1)
            qutebrowser www.bbc.co.uk/sport/football/scores-fixtures
            ;;
		2)
            qutebrowser https://news.ycombinator.com/news
            ;;
		3)
            qutebrowser https://crimsondaggers.com/forum/forum-10.html
            ;;
		4)
            qutebrowser github.com/bleds1
            ;;
		5)
            qutebrowser lemmy.world
            ;;
		6)
            qutebrowser https://libgen.rs
            ;;
        7)
            qutebrowser libreddit.de
            ;;
        8)
            qutebrowser magnetdl.com
            ;;
        9)
            qutebrowser mastodon.art/home
            ;;
        10)
            qutebrowser https://omnivore.app/home
            ;;
        11)
            qutebrowser pinterest.co.uk
            ;;
        12)
            qutebrowser calendar.proton.me
            ;;
        13)
            qutebrowser account.proton.me
            ;;
        14)
            qutebrowser https://app.raindrop.io/my/0
            ;;
        15)
            qutebrowser en.wikipedia.org/wiki/Main_Page
            ;;
        esac
}

main


