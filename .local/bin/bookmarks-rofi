#!/bin/bash
# Lists regularly used bookmarks in Rofi and opens them in the browser.

myTerm=kitty
myEdit=neovim

menu(){
    printf "1. BBC Scores & Fixtures (sc)\n"
    printf "2. Hacker News (hn)\n"
    printf "3. Crimson Daggers (cd)\n"
	printf "4. Github (gh)\n"
	printf "5. Lemmy.world (lm) \n"
    printf "6. Libgen (li)\n"
    printf "7. Reddit (re)\n"
	printf "8. Magnetdl (md)\n"
	printf "9. Mastodon.art (ms) \n"
    printf "10. Omnivore (om) \n"
    printf "11. Wikipedia (wi)\n"
}

main(){
    choice=$(menu | rofi -dmenu | cut -d. -f1)

	case $choice in
		1)
            ungoogled-chromium www.bbc.co.uk/sport/football/scores-fixtures
            ;;
		2)
            ungoogled-chromium https://news.ycombinator.com/news
            ;;
		3)
            ungoogled-chromium https://crimsondaggers.com/forum/forum-10.html
            ;;
		4)
            ungoogled-chromium github.com/bleds1
            ;;
		5)
            ungoogled-chromium lemmy.world
            ;;
		6)
            ungoogled-chromium https://libgen.rs
            ;;
        7)
            ungoogled-chromium reddit.com
            ;;
        8)
            ungoogled-chromium magnetdl.com
            ;;
        9)
            ungoogled-chromium mastodon.art/home
            ;;
        10)
            ungoogled-chromium https://omnivore.app/home
            ;;
        11)
            ungoogled-chromium en.wikipedia.org/wiki/Main_Page
            ;;
        esac
}

main


