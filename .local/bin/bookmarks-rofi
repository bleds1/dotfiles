#!/bin/bash

myTerm=kitty
myEdit=vim

menu(){
	printf "1. Mail\n"
	printf "2. Calendar\n"
	printf "3. Lemmy\n"
	printf "4. Magnetdl\n"
	printf "5. Github\n"
	printf "6. Mastodon\n"
	printf "7. Nitter\n"
    printf "8. Wikipedia\n"
    printf "9. Scores & Fixtures\n"
    printf "10. Crimson Daggers\n"
    printf "11. Raindrop\n"
    printf "12. Ominvore\n"
    printf "13. Libgen\n"
}

main(){
    choice=$(menu | rofi -dmenu | cut -d. -f1)

	case $choice in
		1)
            firefox account.proton.me
            ;;
		2)
            firefox calendar.proton.me
            ;;
		3)
            firefox lemmy.world
            ;;
		4)
            firefox --private-window magnetdl.com
            ;;

		5)
            firefox github.com/bleds1
            ;;

		6)
            firefox mastodon.art/home
            ;;

		7)
            firefox nitter.net/search?q=%23lufc&f=tweets
            ;;
        8)
            firefox en.wikipedia.org/wiki/Main_Page
            ;;
        9)
            firefox www.bbc.co.uk/sport/football/scores-fixtures
            ;;

        10)
            firefox https://crimsondaggers.com/forum/forum-10.html
            ;;  

        11)
            firefox https://app.raindrop.io/my/0
            ;;  

        12)
            firefox https://omnivore.app/home
            ;;
        13)
            firefox https://libgen.rs
            ;;
        esac
}

main


