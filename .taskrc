# Files
data.location=/home/bledley/Documents/.task

# To use the default location of the XDG directories,
# move this configuration file from ~/.taskrc to ~/.config/task/taskrc and uncomment below

#data.location=~/.local/share/task
#hooks.location=~/.config/task/hooks

# Color theme (uncomment one to use)
#include light-16.theme
#include light-256.theme
#include dark-16.theme
#include dark-256.theme
#include dark-red-256.theme
#include dark-green-256.theme
#include dark-blue-256.theme
#include dark-violets-256.theme
#include dark-yellow-green.theme
#include dark-gray-256.theme
#include dark-gray-blue-256.theme
#include solarized-dark-256.theme
#include solarized-light-256.theme
include no-color.theme

# Date Default
weekstart=Monday

# Default Project
# default.project=Inbox

# Limit no of tasks shown
report.next.filter=+PENDING -BLOCKING limit:30

# Search is case insensitive
search.case.sensitive=no

# Daily burndown 
alias.burndown=burndown.daily

# Sort columns
#report.list.columns=
#report.list.labels= 
#report.next.labels=
#report.next.columns=

# Custom Colors 
color.active=color43
color.today=color35
color.calendar.today=color0 on color35
color.overdue=color9
color.calendar.overdue=color0 on color196
color.due=color172
color.due.today=color41
color.calendar.due=color0 on color172
color.calendar.due.today=color0 on color41
color.waiting=color243
color.completed=color239
color.scheduled=color107
color.calendar.scheduled=color0 on color107
color.summary.bar=on color43
color.recurring=color39
color.uda.priority.H=color15
color.uda.priority.M=color247
color.uda.priority.L=color243
color.burndown.done=on color43 
color.burndown.pending=on color236
color.calendar.weeknumber=color242
color.calendar.daynumber=color255
