format-connected-padding = 0
label-disconnected-padding = 0
label-connected-padding-right = 0
label-disconnected-padding-right = 0

#label-connected =   %essid% %{A1:kitty -e nmtui:}%{A}
#label-connected =   %upspeed% %downspeed%
