// ~/.config/VSCodium/User/settings.json
{
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "editor.fontFamily": "'JetBrains Mono', 'monospace', monospace",
    "terminal.integrated.fontFamily": "'JetBrains Mono', 'monospace",
    "editor.codeLensFontFamily": "'JetBrains Mono'",
    "editor.cursorStyle": "block",
    "window.menuBarVisibility": "toggle",
    "editor.fontSize": 15,
    "editor.codeLensFontSize": 14,
    "terminal.integrated.fontSize": 14,
    "keyboard.dispatch": "keyCode",
    "dateTime.customFormat": "HH:mm",
    "editor.cursorBlinking": "phase",
    "editor.defaultColorDecorators": true,
    "explorer.confirmDelete": false,
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "explorer.compactFolders": false,
    "editor.lineHeight": 20,
    "files.defaultLanguage": "markdown",
    "workbench.sideBar.location": "right",
    "editor.scrollbar.vertical": "auto",
    "editor.scrollbar.horizontal": "auto",
    "editor.cursorSmoothCaretAnimation": "explicit",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "workbench.editor.showTabs": "none",
    "zenMode.showTabs": "none",
    "zenMode.hideLineNumbers": false,
    "zenMode.fullScreen": true,

    // Vim
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "#D19FB7",
    "vim.highlightedyank.textColor": "white",
    "vim.highlightedyank.duration": 250,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "k"],
            "after": ["Esc"]
        }
    ],
    "vim.cursorStylePerMode.insert": "line-thin",
    "vim.cursorStylePerMode.normal": "block",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before":["leader","b","n"],
            "commands":[":bn"]
        },
        {
            "before":["leader","b","p"],
            "commands":[":bp"]
        },
        {
            "before":["leader","b","k"],
            "commands":[":bd"]
        },
        {
            "before":["leader","q"],
            "commands":[":q!"]
        },
        {
            "before":["leader","f","s"],
            "commands":[":w!"]
        },
    ],

    // Github Dark Dimmed
    "workbench.colorCustomizations": 
    {
    "editorCursor.foreground": "#63C5B2",
    "editor.selectionBackground": "#C280A0",
    "sideBar.background": "#22262F",
    "activityBar.border": "#22262F",
    "statusBar.border": "#22262F",
    "sideBar.border": "#22262F",
    "sideBarSectionHeader.background": "#22262F",
    "scrollbarSlider.activeBackground": "#292D37",
    "scrollbarSlider.hoverBackground": "#292D37",
    "terminal.background": "#22262F",
    "actionBar.toggledBackground": "#22262F",
    "panel.background": "#22262F",
    "panel.border": "#22262F"
    },
}