// Zed keymap
// https://zed.dev/docs/key-bindings
// to see default key bindings: run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-0": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": ["vim::SwitchMode", "Normal"],
      "k j": ["vim::SwitchMode", "Normal"]
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting &&!menu",
    "bindings": {
      "space m p": "markdown::OpenPreview",
      "space f s": "workspace::Save",
      "space f p": "workspace::Open",
      "space f r": "projects::OpenRecent",
      "space s p": "workspace::NewSearch",
      "space b i": "tab_switcher::Toggle",
      "space b n": "pane::ActivateNextItem",
      "space b p": "pane::ActivatePrevItem",
      "space n n": "workspace::NewFile",
      "space e": "workspace::ToggleLeftDock",
      "space space": "file_finder::Toggle",
      "space v": "pane::SplitRight",
      "space w c": "pane::CloseActiveItem",
      "space h": "workspace::ActivateNextPane",
      "space l": "workspace::ActivatePreviousPane",
      "ctrl-0": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "!Terminal",
    "bindings": {
    }
  },
  {
    "context": "Markdown",
    "bindings": {
      "space m p": "markdown::OpenPreview"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  }
]
