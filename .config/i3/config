## i3 CONFIG ##
#
# Gaps
gaps inner 6
gaps outer 6
#smart_gaps on

# Window/Border Colours
# class                 border  backgr. text    indicator child_border
client.focused          #151515 #151515 #ffffff #82abaa   #82abaa
client.focused_inactive  #151515 #151515 #ffffff #151515   #151515
client.unfocused       #151515 #151515 #ffffff #151515   #151515
client.urgent         #151515 #151515 #ffffff #82abaa   #82abaa
client.placeholder   #151515 #151515 #ffffff #82abaa   #82abaa
client.background       #ffffff
#
# No title bars
default_border pixel
#default_border normal
new_window pixel 1
new_float normal 
default_floating_border pixel 1
hide_edge_borders none
smart_borders on

# Font for window titles. Will also be used by the bar unless a different font
font pango: JetBrains Mono Light 8

# Scratchpads
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# STARTUP
# Default Terminal
set $term kitty
# set modkey
set $mod Mod4
exec_always --no-startup-id launch.sh
#exec_always xfce4-panel --disable-wm-check
exec_always --no-startup-id xfce4-power-manager
exec_always blueman-applet
exec_always --no-startup-id dropbox start
exec_always nm-applet
exec_always xfce4-screensaver
exec_always xfce4-notifyd
#exec aw
exec_always devilspie &
#exec guake
#exec_always feh --bg-scale ~/Pictures/Wallpapers/cyberpunk.png
exec --no-startup-id nitrogen --restore 
exec_always --no-startup-id picom --experimental-backends &
bindsym $mod+g exec gpick
exec_always --no-startup-id autotiling
# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

# Window classes

#mpv
for_window [class="mpv"] floating enable
for_window [class="mpv"] resize set 590 333, move position center
for_window [class="mpv"] sticky enable
#feh
for_window [class="feh"] floating enable
for_window [class="feh"] resize set 800 600, move position center
#for_window [class="feh"] sticky enable

# KEYBINDS

# start a terminal
bindsym $mod+t exec kitty
# open browser
#bindsym $mod+b exec firefox
bindsym $mod+b exec qutebrowser
# open bookmarks
bindsym $mod+m exec bookmarks-rofi
# open obsidian
bindsym $mod+o exec obsidian
# open file manager
#bindsym $mod+n exec pcmanfm
bindsym $mod+n exec nautilus
# start dmenu
bindsym $mod+x exec rofi -show run
bindsym $mod+i exec rofi -show window
bindsym $mod+c exec rofi -show filebrowser
#bindsym $mod+e exec rofi-edit
bindsym $mod+s exec searchweb
#bindsym $mod+d exec --no-startup-id dmenu_run 
bindsym $mod+p exec ~/.local/bin/dmenu_pass
# take a screenshot
bindsym Print exec xfce4-screenshooter
bindsym $mod+Shift+p exec xfce4-screenshooter

# Lockscreen

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.
#
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

#set $i3lockwall sh ~/.local/bin/lock
#bindsym $mod+z exec i3lock -c 000000
#bindsym $mod+z exec --no-startup-id $i3lockwall
bindsym $mod+z exec xflock4

# Brightness and Volume

# keys for screen brightness
#bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 10%+
#bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

# Keys for Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Window management

# fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# sticky toggle
bindsym $mod+Shift+t sticky toggle

# kill focused window
bindsym $mod+q kill

# remove all gaps
bindsym $mod+Shift+f gaps inner current set 0; gaps outer current set 0

# default gaps
bindsym $mod+Shift+d gaps inner current set 6; gaps outer current set 6

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# focus cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# vim like focus window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move the focused window ecursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# move focused window vim keys:
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# left right workspace switching
bindsym $mod+Mod1+Right workspace next
bindsym $mod+Mod1+Left workspace prev

# left right workspace switching v keys
bindsym $mod+Mod1+l workspace next
bindsym $mod+Mod1+h workspace prev

# split in vertical orientation
bindsym $mod+Shift+v split v

# split in horizontal orientation
bindsym $mod+Shift+s split h

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# window floating rules 
for_window [class="Arandr"] floating enable
for_window [instance="fs-uae-launcher"] floating enable

# floating pop up automatically
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+Home workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+End workspace number $ws10
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+Home move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
bindsym $mod+Shift+End move container to workspace number $ws10

# workspace specific launch
exec --no-startup-id i3-msg 'workspace 1; exec kitty'
#exec --no-startup-id i3-msg 'workspace 1; exec kitty -e tmux'
#assign [class="kitty"] $ws1
#assign [class="firefox"] $ws2
assign [class="obsidian"] $ws3
assign [class="FreeTube"] $ws4
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape exec "i3-nagbar -t warning -m 'exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Keyboard Layout
# set caps as esc with setxkbmap
exec --no-startup-id setxkbmap -option caps:escape

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+Shift+s mode "default"
}

#resize mode for focused window"
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        ##status_command i3status
mode invisible
hidden_state hide
}
